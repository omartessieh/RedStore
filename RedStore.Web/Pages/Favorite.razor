@page "/Favorite"
@using System.Text.Json
@using System.Net.Http.Json
@inject HttpClient httpClient

@if (FavoriteView == null)
{
    <div Style="padding-bottom:50px;">
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="600px" />
    </div>
}
else
{
    @if (FavoriteView.Count() > 0)
    {
        <section class="h-100 h-custom" style="margin-bottom: 60px;">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <div>
                                            <p class="mb-1"><b>Favorite Details</b></p>
                                            <p class="mb-0">You have @TotalItems items in your Favorite Details</p>
                                        </div>
                                    </div>

                                    @foreach (var item in FavoriteView)
                                    {

                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between">
                                                    <a href="/ProductDetails/@item.Product_id" style="text-decoration:none;color:black;">
                                                    <div class="d-flex flex-row align-items-center">
                                                        <div>
                                                            <img src="@productslink/@item.ImageURL"
                                                     class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                                                        </div>
                                                        <div class="ms-3">
                                                            <h6 style="margin-bottom: 0px;">@item.Title</h6>
                                                            <p class="small mb-0">Date: @item.Created_at</p>
                                                        </div>
                                                    </div>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    else
    {
        <section class="" style="margin-bottom: 50px;height: 700px;">
            <div class="row d-flex justify-content-center align-items-center ">
                <div class="col">
                    <div class="card" style="height: 700px;">
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <div>
                                            <p class="mb-1"><b>Order Details</b></p>
                                            <p class="mb-0">There are currently no items in your Favorite Details</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}
