@page "/Login"

<h2 class="title">Login Form</h2>

<MudGrid>
    <MudItem xs="12" Class="my-4">
        <EditForm Model="@LoginDto" OnSubmit="LoginSubmit">
            <MudCardContent>
                <div class="control-group" style="padding-bottom:2%;">
                    <input type="text" class="form-control" @bind="@LoginDto.Username"
                           For="@(() => @LoginDto.Username)" placeholder="User Name" required="required" />
                </div>
                <div class="control-group">
                    <input type="password" class="form-control" @bind="@LoginDto.Password"
                           For="@(() => @LoginDto.Password)" placeholder="Password"
                           required="required" minlength="6"/>
                </div>
            </MudCardContent>
            <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Dark" Class="ml-auto" Style="margin-right:7px;">Login</MudButton>
            </MudCardActions>
        </EditForm>
        <MudItem xs="12" Class="my-4">
            <MudText Typo="Typo.body2" Align="Align.Center">
                <a style="color:black;" href="/Registration">Create new account</a>
            </MudText>
        </MudItem>
        <MudItem xs="12" Class="my-4">
            @if (@LogFaild != null)
            {
                <MudAlert Severity="Severity.Error" ContentAlignment="HorizontalAlignment.Center">@LogFaild</MudAlert>
            }
        </MudItem>
    </MudItem>
</MudGrid>