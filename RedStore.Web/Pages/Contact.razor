@page "/Contact"

<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="pr-3">Contact Us</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form p-30">
                <EditForm Model="@contactDto" OnSubmit="ContactSubmit">
                    <div class="control-group" style="padding-bottom:11px;">
                        <input type="text" class="form-control" placeholder="Username" value="@Username" disabled/>
                    </div>
                    <div class="control-group" style="padding-bottom:11px;">
                        <input type="email" class="form-control" placeholder="Email" value="@Email" disabled/>
                    </div>
                    <div class="control-group" style="padding-bottom:11px;">
                        <input type="text" class="form-control" id="subject" @bind="@contactDto.Subject"
                               For="@(() => @contactDto.Subject)" placeholder="Subject" name="subject"
                               required="required"/>
                    </div>
                    <div class="control-group" style="padding-bottom:11px;">
                        <textarea class="form-control" rows="8" id="message" placeholder="Message" name="Message"
                                  @bind="@contactDto.Message" For="@(() => @contactDto.Message)" required="required"></textarea>
                    </div>
                    <div>
                        @if (User_id != 0)
                        {
                            <button class="btn btn-dark py-2 px-4" type="submit" id="sendMessageButton">
                                Send Message
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-dark py-2 px-4" disabled>
                                Send Message
                            </button>
                        }
                    </div>
                </EditForm>
            </div>
        </div>
        <div class="col-lg-5 mb-5">
            <div class="p-30 mb-30">
                @if (Information != null)
                {
                    <iframe style="width:100%;height:250px;border:0;"
                        src="@Information.Map"
                        allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                }
                else
                {
                    <iframe style="width:100%;height:250px;border:0;"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d52992.273657857135!2d35.46926276147284!3d33.88921334639044!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151f17215880a78f%3A0x729182bae99836b4!2sBeirut!5e0!3m2!1sen!2slb!4v1674427156188!5m2!1sen!2slb"
                        allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                }
            </div>
            <div class=" p-30 mb-3" style="padding-top:10px;">
                @if (Information != null)
                {
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-dark mr-3"></i>@Information.Location</p>
                    <p class="mb-2"><i class="fa fa-envelope text-dark mr-3"></i><a href="mailto:@Information.Email" style="color:black;text-decoration:none;">@Information.Email</a></p>
                    <p class="mb-2"><i class="fa fa-phone-alt text-dark mr-3"></i><a href="tel:@Information.Phone" style="color:black;text-decoration:none;">@Information.Phone</a></p>
                }
                else
                {
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-dark mr-3"></i>Location</p>
                    <p class="mb-2"><i class="fa fa-envelope text-dark mr-3"></i>Gmail</p>
                    <p class="mb-2"><i class="fa fa-phone-alt text-dark mr-3"></i>Phone Number</p>
                }
            </div>
        </div>
    </div>
</div>