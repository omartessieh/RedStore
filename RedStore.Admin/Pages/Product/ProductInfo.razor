@page "/ProductInfo/{Product_id:int}/{Title}"
@inject ISnackbar Snackbar

<h3>@Title ProductInfo</h3>

<MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6" Class="mt-4">
    <MudTabPanel Text="Images">
        <MudDataGrid Items="@GetProductImages">
            <Columns>

                <Column T="ProductImageDto" Field="ImageURL" Title="Product Image" CellStyle="min-width: 700px">
                    <CellTemplate>
                        <MudText Typo="Typo.subtitle1">@context.Item.ImageURL</MudText>
                    </CellTemplate>
                </Column>

            </Columns>
        </MudDataGrid>
    </MudTabPanel>


    <MudTabPanel Text="Colors">
        <MudText>Content Two</MudText>
    </MudTabPanel>
    <MudTabPanel Text="Price">
        <MudText>Content Three</MudText>
    </MudTabPanel>
</MudTabs>

